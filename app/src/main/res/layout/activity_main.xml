<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3E7EC"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTahminEt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Tahmin Et"
        android:textColor="#455A64"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtSayi"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtViewKalanHak"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:background="#E8C6ED"
        android:text="Kalan Hakkınız:3"
        android:textColor="@color/purple_700"
        android:textColorHighlight="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="105dp"
        app:layout_editor_absoluteY="259dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTxtSayi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:ems="10"
        android:hint="Sayı Giriniz"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#136FB8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTahminEt"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>